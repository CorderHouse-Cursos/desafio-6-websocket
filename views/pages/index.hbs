<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.socket.io/4.4.0/socket.io.min.js"
      integrity="sha384-1fOn6VtTq3PWwfsOrk45LnYcGosJwzMHv+Xh/Jx5303FVOXzEnw0EpLv30mtjmlj"
      crossorigin="anonymous"
    ></script>
    <title>Crear Productos</title>
  </head>
  <body>
    <div style="margin-top:20px" class="container card">
      <div class="row">
        <div class="col-md-12">
          <h1>Crear Productos</h1>
        
          <form
            action="#"
            id="formproducts"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Nombre del
                producto</label>
              <input
                type="text"
                class="form-control"
                id="product_name"
                name="product_name"
                aria-describedby="emailHelp"
              />
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Precio del
                Producto</label>
              <input
                type="number"
                class="form-control"
                id="product_price"
                name="product_price"
              />
            </div>
            <div class="mb-3 form-check">
              <input
                type="file"
                class="form-file-input"
                id="product_image"
                name="product_image"
              />
            </div>
            <button type="submit" class="btn btn-primary">Crear</button>
          </form>

        </div>
      </div>

      <div class="table-products">
        <h1>Listado de productos</h1>
        <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Imagen del Producto</th>
              <th scope="col">Nombre del Producto</th>
              <th scope="col">Precio del Producto</th>

            </tr>
          </thead>
          <tbody id="products">

          </tbody>
        </table>

      </div>

      <div>
        <h1>Centro de Mensajes</h1>
       
        <form
          action="#"
          id="formmessages"
          method="post"
          enctype="multipart/form-data"
        >
        <input placeholder="Email" type="email" name="email" id="email">
        <br>
           <br>
        <div class="card" >
          <div id="messages" class="card-body">

         
     
          </div>
        </div>
           <br>
        <input placeholder="Mensaje" type="text" name="message" id="message"/>
        <button type="submit" class="btn btn-primary">Enviar</button>


      </div>
    </div>
  </body>

  <script src="./js/main.js"></script>
</html>